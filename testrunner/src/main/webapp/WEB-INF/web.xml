    <servlet>
        <servlet-name>appstats</servlet-name>
        <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>appstats</servlet-name>
        <url-pattern>/appstats/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>appstats</web-resource-name>
            <url-pattern>/appstats/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <servlet>
        <display-name>Remote API Servlet</display-name>
        <servlet-name>RemoteApiServlet</servlet-name>
        <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoteApiServlet</servlet-name>
        <url-pattern>/remote_api</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>teammates.ui.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BackDoorServlet</servlet-name>
        <servlet-class>teammates.logic.backdoor.BackDoorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BackDoorServlet</servlet-name>
        <url-pattern>/backdoor</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>EmailWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.EmailWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailWorkerServlet</servlet-name>
        <url-pattern>/emailWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SendEmailWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.SendEmailWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendEmailWorkerServlet</servlet-name>
        <url-pattern>/sendEmailWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SubmissionWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.SubmissionWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmissionWorkerServlet</servlet-name>
        <url-pattern>/submissionWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EvaluationSubmissionAdjustmentWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.EvaluationSubmissionAdjustmentWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvaluationSubmissionAdjustmentWorkerServlet</servlet-name>
        <url-pattern>/evalSubmissionAdjustmentWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FeedbackSubmissionAdjustmentWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.FeedbackSubmissionAdjustmentWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackSubmissionAdjustmentWorkerServlet</servlet-name>
        <url-pattern>/feedbackSubmissionAdjustmentWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EvaluationOpeningReminders</servlet-name>
        <servlet-class>teammates.logic.automated.EvaluationOpeningRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvaluationOpeningReminders</servlet-name>
        <url-pattern>/evaluationopeningreminders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EvaluationClosingReminders</servlet-name>
        <servlet-class>teammates.logic.automated.EvaluationClosingRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvaluationClosingReminders</servlet-name>
        <url-pattern>/evaluationclosingreminders</url-pattern>
    </servlet-mapping>    
    
    <servlet>
        <servlet-name>EvaluationPublishEmailWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.EvaluationPublishEmailWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvaluationPublishEmailWorkerServlet</servlet-name>
        <url-pattern>/evalPublishEmailWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EvaluationRemindEmailWorkerServlet</servlet-name>
        <servlet-class>teammates.logic.automated.EvaluationRemindEmailWorkerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvaluationRemindEmailWorkerServlet</servlet-name>
        <url-pattern>/evalRemindEmailWorker</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FeedbackSessionOpeningReminders</servlet-name>
        <servlet-class>teammates.logic.automated.FeedbackSessionOpeningRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackSessionOpeningReminders</servlet-name>
        <url-pattern>/feedbackSessionOpeningReminders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FeedbackSessionClosingReminders</servlet-name>
        <servlet-class>teammates.logic.automated.FeedbackSessionClosingRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackSessionClosingReminders</servlet-name>
        <url-pattern>/feedbackSessionClosingReminders</url-pattern>
    </servlet-mapping>    
    
    <servlet>
        <servlet-name>FeedbackSessionPublishedReminders</servlet-name>
        <servlet-class>teammates.logic.automated.FeedbackSessionPublishedRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackSessionPublishedReminders</servlet-name>
        <url-pattern>/feedbackSessionPublishedReminders</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CompileLogs</servlet-name>
        <servlet-class>teammates.logic.automated.CompileLogsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompileLogs</servlet-name>
        <url-pattern>/compileLogs</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminSearchTask</servlet-name>
        <servlet-class>teammates.ui.controller.AdminSearchTaskServlet</servlet-class>
    </servlet>
    
    <servlet>
        <description>Servlet that handles all incoming requests</description>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>teammates.ui.controller.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminSearchTask</servlet-name>
        <url-pattern>/searchTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/page/*</url-pattern>
    </servlet-mapping>
    
    <security-constraint>
      <web-resource-collection>
          <web-resource-name>AllPage</web-resource-name>
        <url-pattern>/page/*</url-pattern>
      </web-resource-collection>
      <user-data-constraint>
        <transport-guarantee>CONFIDENTIAL</transport-guarantee>
      </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AutomatedEmails</web-resource-name>
            <url-pattern>/evaluationopeningreminders</url-pattern>
            <url-pattern>/evaluationclosingreminders</url-pattern>
            <url-pattern>/feedbackSessionOpeningReminders</url-pattern>
            <url-pattern>/feedbackSessionClosingReminders</url-pattern>
            <url-pattern>/feedbackSessionPublishedReminders</url-pattern>
            <url-pattern>/emailWorker</url-pattern>
        </web-resource-collection>
         <web-resource-collection>
            <web-resource-name>TaskQueue</web-resource-name>
            <url-pattern>/searchTask</url-pattern>
            <url-pattern>/submissionWorker</url-pattern>
            <url-pattern>/feedbackSubmissionAdjustmentWorker</url-pattern>
            <url-pattern>/evalSubmissionAdjustmentWorker</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
          </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>DisallowDirectAccess</web-resource-name>
            <description>Pages that should not be accessed directly</description>
            <url-pattern>/jsp/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
          </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AdminPages</web-resource-name>
            <description>Page for admin use only</description>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
          </user-data-constraint>
    </security-constraint>
    <error-page>
        <error-code>403</error-code>
        <location>/unauthorized.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/pageNotFound.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errorPage.jsp</location>
    </error-page>
     <error-page>
        <error-code>500</error-code>
        <location>/deadlineExceededErrorPage.jsp</location>
    </error-page>
</web-app>